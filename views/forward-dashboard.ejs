<%-include('_header'); %>
<%-include('_navbar'); %>
<section class="my-5 py-5">
    <div class="container">
        <div class="row border-bottom">
            <div class="col"> 
                <span class="fs-1">
                   Forward Dashboard
                </span>
            </div>
            <div class="col">
                <span class="float-end">
                    <a class="btn" href='/user/forwards/add'>Add Forward</a>
                </span>
            </div>
            
        </div>
        <div class="row">
            <% if(!data || data == undefined){ %>
            <% }else{ %>
                <% data.forEach(async(forward)=>{ %>
                <div class=" col-sm-12 col-md-4 col-lg-3 my-3">
                    <div class="card border-light shadow-sm" style="width: 18rem;">
                        <img class="card-img-top" width="250" height="200" src="<%=forward.Forward_Image%>" alt="forward_image">
                        <div class="card-body">
                            <div class="card-title text-truncate">
                                <h5><%=forward.Forward_Title%></h5>
                            </div>
                            <p class="card-subtitle mb-2 text-muted"><span class="mx-2"><%=forward.Forward_Type.replace(/\w/, c => c.toUpperCase())%></span> | <span class=" mx-2"><%=forward.Forward_Status.replace(/\w/, c => c.toUpperCase())%></span></p>
                            <p class="card-text text-truncate"><%=forward.Forward_Desc%></p>
                            <a href="/user/forwards/settings?id=<%=forward.Forward_ID%>" class="btn w-100">Edit
                                Forward
                            </a>
                        </div>
                    </div>
                </div>
                <% }) %>
            <% } %>
        </div>

    </div>

</section>

<%-include('_footer'); %>