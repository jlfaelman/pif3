<%-include('_header')%>
<%-include('_navbar')%>

<body>

    <section class="my-5 py-5">
        <div class="container">
            <div id="method-error" class="my-3" hidden>
                <div class="card  mx-auto border-danger w-50">
                    <div class="card-body">
                        <div class="align-middle">
                            <span class="material-icons">
                                info
                            </span> 
                            <span class=" " id="error-text"></span>
                        </div>
                    </div>
                </div>
            </div>
            <form class="card w-50 mx-auto shadow" onsubmit="addGoods(); return false;">
                <div class="card-body">
                    <div class="fs-4 my-2">
                        Add Forward Method
                    </div>
                    <div class="card border-light shadow-sm  mx-auto w-75">
                        <div class="card-body">
                            <span class="text-muted">
                                Note: The information you enter will be used for donations. 
                                <br>Make sure your information is right.
                            </span>
                        </div>
                    </div>
                    <div class="form-floating  my-4">
                        <input type="text" class="form-control border-light shadow-sm" placeholder="Title" id="goods-item" required>
                        <label for="" class="text-muted">Tell us what you need</label>
                    </div>
                    <div class="form-floating  my-4">
                        <input type="number" class="form-control border-light shadow-sm" placeholder="Quantity" id="goods-quantity" required>
                        <label for="" class="text-muted">How many do you need</label>
                    </div>
                    <div class="form-floating  my-4">
                        <input type="text" class="form-control border-light shadow-sm" placeholder="Address" id="goods-address" required>
                        <label for="" class="text-muted">Tell us your address</label>
                    </div>

                    <div class="">
                        <input type="submit" class="btn float-end" value="Proceed">
                    </div>
                </div>
            </form>
        </div>
    </section>


    <%-include('_footer')%>