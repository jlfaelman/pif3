<%-include('_header');%>
<%-include('_navbar');%>
<section class="py-5 my-5 container">
    <div class="back">
        <div class="container">
            <a class="btn " href="/forward/page?id=<%=goods.Forward_ID%>">
                &laquo; Back
            </a>
        </div>
    </div>

    <div class="d-flex flex-md-row flex-column justify-content-center">
        <div class="card w-50">
            <div class="card-body">
                <div class="fs-4">
                    Forward Information
                </div>
                <div class="card border-light shadow-sm p-3 text-muted">
                    Click provided courier services image and use information below for donation.<br>
                    Also note that they may require additional fees.
                </div>
                
                <div class="d-flex flex-row justify-content-center" >
                    <div class="lalamove border-primary">
                        <a target="_blank" class="btn btn-light shadow-sm my-5" rel="noopener noreferrer" href="https://web.lalamove.com/">
                            <img src="/lalamove.png" height='100' alt="" class="">
                        </a>
                    </div>
                </div>
                <div class="form-group  my-3">
                    <label for="">Item Description</label>
                    <div class="input-group mx-auto ">  
                        <input type="text" class="form-control " placeholder="Recipient's username" value="<%=goods.Goods_Item%>" disabled>
                        <button class="btn bg-blue text-light" type="button" id="copy-text">
                            <i class="material-icons">
                                assignment
                            </i>
                        </button>
                    </div>
                </div>
                <div class="form-group my-3">
                    <label for="">Address Drop Off</label>
                    <div class="input-group mx-auto  ">  
                        <input type="text" class="form-control " placeholder="Recipient's username" value="<%=goods.Goods_Address%>" disabled>
                        <button class="btn bg-blue text-light" type="button" id="copy-text">
                            <i class="material-icons">
                                assignment
                            </i>
                        </button>
                    </div>
                </div>
                
                  
            </div>
        </div>
    </div>
</section>
<%-include('_footer');%>