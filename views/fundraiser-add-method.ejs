<%-include('_header')%>
<%-include('_navbar')%>

<body>

    <section class="my-5 py-5">
        <div class="container">
            <div id="method-error" class="my-3" hidden>
                <div class="card  mx-auto border-danger w-50">
                    <div class="card-body">
                        <div class="align-middle">
                            <span class="material-icons">
                                info
                            </span> 
                            <span class=" " id="error-text"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card w-50 mx-auto shadow">
                <div class="card-body">
                    <div class="fs-4">
                        Add Donation Method
                    </div>
                    <div id="financial" class="my-2">
                        <div class="card border-light shadow-sm text-muted w-50 mx-auto p-2">
                            Now select if you goal depends on what you will earn or with a date.
                        </div>
                        <div class="form-floating my-3" id="quota">
                            <input type="text" class="form-control border-light shadow-sm" placeholder="Goal"
                                id="method-quota">
                            <label for="method-goal" class="text-muted">Set your goal(PHP)</label>
                        </div>
                        <div class="d-flex flex-row justify-content-evenly my-4">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="checkpaypal">
                                <label class="form-check-label" for="checkpaypal">
                                    <img src="/paypal.png" alt="" height="100" width="100" class=" img-fluid">
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="checkpaymaya"
                                    onchange="showPaymaya();">
                                <label class="form-check-label" for="checkpaymaya">
                                    <img src="/paymaya.png" alt="" height="150" width="150" class=" img-fluid">
                                </label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="checkbox" id="checkgcash" onchange="showGcash();">
                                <label class="form-check-label" for="checkgcash">
                                    <img src="/gcash.png" alt="" height="130" width="140" class=" img-fluid">
                                </label>
                            </div>
                        </div>
                        <!-- File -->
                        <div class="mb-3" id="paymaya-qr" hidden>
                            <label for="paymaya-img" class="text-muted">PayMaya QR Code</label>
                            <input class="form-control border-light shadow-sm" type="file" id="paymaya-img">
                        </div>
                        <!--  -->
                        <div class="mb-3" id="gcash-qr" hidden>
                            <label for="gcash-img" class="text-muted">GCash QR Code</label>
                            <input class="form-control border-light shadow-sm" type="file" id="gcash-img">
                        </div>
                        <div class="card border-light shadow-sm text-muted w-50 mx-auto p-2">
                            Leave date empty if you don't want to set date for your fundraiser
                        </div>
                        <div class="form-floating my-3" id="date">
                            <input type="date" class="form-control border-light shadow-sm" placeholder="Date"
                                id='method-date'>
                            <label for="method-goal" class="text-muted">Set your goal</label>
                        </div>
                        <button class="btn my-3 float-end" onclick="addFunding();">Proceed</button>
                    </div>

                   
                </div>
            </div>
        </div>
    </section>


    <%-include('_footer')%>