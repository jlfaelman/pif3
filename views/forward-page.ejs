<%-include('_header') %>
<%-include('_navbar') %>

<body class="py-5">
    <%if(success != undefined){%>

    <section class="container " id='donate-success'>
        <div class="card border-success mt-5">
            <div class="card-body">
                <span class="text-success">
                    Thank you for your donation!
                </span>
                <button type="button" class="btn-close float-end" onclick="dismiss();" aria-label="Close">
                </button>
            </div>
        </div>
    </section>
    <%}%>
    <section class=" pt-3">
        <div class="container">
            <a class="btn mt-3" href="/forward">
                &laquo; Back
            </a>
        </div>
    </section>

    <section class="mb-3">
        <div class="container">
            <span class="display-5"> 
                <%= forward.Forward_Title.replace(/\w/, c => c.toUpperCase()) %>
    </span>
    </div>
    </section>
    <section class="mb-3">
        <div class="container ">
            <div class="d-flex flex-row justify-content-between">
                <div>
                    <span class="icon" style="padding-right: 10px;">
                        <i class="fas fa-id-card fa-lg"></i>
                    </span>
                    By:
                    <span class="fs-5 ">
                        <%= user.User_First.replace(/\w/, c => c.toUpperCase())%>
                        <%= user.User_Last.replace(/\w/, c => c.toUpperCase())%>
                    </span>
                </div>

                <div class="pl-5">
                    <span class="px-2">
                        <i class="fas fa-tag"></i>
                        <%= forward.Forward_Type.replace(/\w/, c => c.toUpperCase())%>
                    </span>
                    |
                    <span class="px-2">
                        <div class="fas fa-calendar"></div>
                        <%= moment(forward.created_At.replace(/\w/, c => c.toUpperCase())).format('MMMM DD, YYYY') %>
                    </span>
                    |
                    <span class="px-2">
                        <i class="fas fa-info"></i>
                        <%=forward.Forward_Status.replace(/\w/, c => c.toUpperCase()) %>
                    </span>
                </div>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="row">
            <div class="col-7">
                <img src="<%=forward.Forward_Image%>" alt="" class="rounded " width="700" height="500">
            </div>

            <div class="col">
                <div class="card border-light shadow-sm ">
                    <div class="card-body ">

                        <div class="container">
                            Share on:
                        </div>
                        <div class="d-flex flex-row justify-content-between border-bottom my-3 p-2">
                            <a class="btn" target="_blank" rel="noopener noreferrer"
                                href="https://www.facebook.com/sharer/sharer.php?u=http://localhost:3000/forward/page?id=<%=forward.Forward_ID%>">
                                <div class="d-flex flex-column">
                                    <span class="material-icons ">
                                        facebook
                                    </span>
                                    <span class="">
                                        Facebook
                                    </span>
                                </div>
                            </a>
                            <a class="btn" target="_blank" rel="noopener noreferrer"
                                href="https://twitter.com/intent/tweet?url=http://localhost:3000/forward/page?id=<%=forward.Forward_ID%>&text=<%=forward.Forward_Title%>">
                                <div class="d-flex flex-column">
                                    <i class="fa fa-twitter fa-lg"></i>
                                    <span class="">
                                        Twitter
                                    </span>
                                </div>
                            </a>
                            <a class="btn" target="_blank" rel="noopener noreferrer"
                                href="https://pinterest.com/pin/create/button/?url=http://localhost:3000/forward/page?id=id=<%=forward.Forward_ID%>&media=&description=<%=forward.Forward_Title%>">
                                <div class="d-flex flex-column">
                                    <i class="fa fa-pinterest fa-lg"></i>
                                    <span class="">
                                        Pinterest
                                    </span>
                                </div>
                            </a>

                        </div>
                        <% if(goods){%>
                            <% if(forward.Forward_Status == 'active' ){%>
                            <a href="/forward/page/donate?id=<%=forward.Forward_ID%>" class="btn w-75 mx-5 bg-blue text-light mb-5 shadow" >
                                Donate 
                            </a>
                            <% }else{%>
                            <div class="card border-warning w-75 mx-5 my-3 p-2 text-muted">
                                Fundraising is still being checked and verified by admin.
                            </div>
                            <button type="button" class="btn w-75 mx-5 border-light shadow mb-5 disabled" data-bs-toggle="modal"
                                alt="Donation is not active" data-bs-target="#donateModal" disabled>
                                Donate
                            </button>
                            <% }%>
                        <% }else{%>
                        <div class="card border-warning w-75 mx-5 my-3 p-2 text-muted">
                            forward did not set donation method yet.
                        </div>
                        <button type="button" class="btn w-75  mx-5 border-light shadow mb-5 disabled" data-bs-toggle="modal"
                            alt="" data-bs-target="#donateModal" disabled>
                            Donate
                        </button>
                        <% }%>
                       
                        
                        
                    </div>
                </div>

            </div>
        </div>
    </section>


    <section class="my-5 ">
        <div class="border-bottom my-3 mx-auto w-75">
            <span class="fs-2">
                Story
            </span>
        </div>
        <div class="container">
            <p class="fs-5" style="white-space: pre-line">
                <%=forward.Forward_Desc %>
            </p>
        </div>

    </section>


        <%-include('_footer') %>